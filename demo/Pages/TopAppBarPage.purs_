import Halogen.HTML (IProp)
import Halogen.HTML as HH
import Halogen.HTML.Properties as HP
import Halogen.HTML.Events as HE
import Halogen.HTML.Properties.ARIA as Halogen.HTML.Properties.ARIA
import HalogenMWC.Typography as Typography

data TopAppBarPage w i =
    { fixedAdjust :: HH.Attribute w i
    , topAppBar :: HH.HTML w i
    }

view :: (w i -> topMsg) -> TopAppBarPage w i -> HH.HTML topMsg
view lift { topAppBar, fixedAdjust } =
    HH.map lift $
        HH.div
            [ HP.style "height: 200vh"
            , Typography.typography
            ]
            [ topAppBar
            , HH.div [ fixedAdjust ]
                (List.repeat 4 (HH.p [] [ HH.text demoParagraph ]))
            ]

demoParagraph :: String
