activatedItemList :: Model -> HH.HTML Msg
activatedItemList model =
    let
        listItem ( icon, label ) =
            List.Item.listItem
                (List.Item.defaultConfig
                    # List.Item.setSelected
                        (if model.activated == label then
                            Just List.Item.activated

                         else
                            Nothing
                        )
                    # List.Item.setOnClick (SetActivated label)
                )
                [ List.Item.graphic [] [ Icon.icon [] icon ], HH.text label ]
    in
    Array.list (List.defaultConfig # Array.setAttributes demoList)
        (listItem ( "inbox", "Inbox" ))
        (map listItem
            [ ( "star", "Star" )
            , ( "send", "Sent" )
            , ( "drafts", "Drafts" )
            ]
        )

