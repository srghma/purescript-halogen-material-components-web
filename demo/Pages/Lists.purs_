listWithTrailingCheckbox :: Model -> HH.HTML Msg
listWithTrailingCheckbox model =
    let
        listItem label =
            List.Item.listItem
                (List.Item.defaultConfig
                    # List.Item.setSelected
                        (if Set.member label model.checkboxes then
                            Just List.Item.selected

                         else
                            Nothing
                        )
                )
                [ HH.text "Dog Photos"
                , List.Item.meta []
                    [ Checkbox.checkbox
                        (Checkbox.defaultConfig
                            # Checkbox.setOnChange (ToggleCheckbox label)
                            # Checkbox.setState
                                (Just
                                    (if Set.member label model.checkboxes then
                                        Checkbox.checked

                                     else
                                        Checkbox.unchecked
                                    )
                                )
                        )
                    ]
                ]
    in
    Array.list
        (List.defaultConfig
            # Array.setAttributes
                (HP.attr (AttrName "role") "group"
                    :: demoList
                )
        )
        (listItem "Dog Photos")
        (map listItem
            [ "Cat Photos"
            , "Potatoes"
            , "Carrots"
            ]
        )

