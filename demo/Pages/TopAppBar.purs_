            [ iframe "Standard" Route.StandardTopAppBar
            , iframe "Fixed" Route.FixedTopAppBar
            , iframe "Dense" Route.DenseTopAppBar
            , iframe "Prominent" Route.ProminentTopAppBar
            , iframe "Short" Route.ShortTopAppBar
            , iframe "Short - Always Collapsed" Route.ShortCollapsedTopAppBar
            ]
        ]
    }

iframe :: String -> Url -> HH.HTML w i
iframe title route =
    let
        stringUrl =
            Route.toString route
    in
    HH.div
        [ HP.style "display: inline-block"
        , HP.style "-ms-flex: 1 1 45%"
        , HP.style "flex: 1 1 45%"
        , HP.style "-ms-flex-pack: distribute"
        , HP.style "justify-content: space-around"
        , HP.style "min-height: 200px"
        , HP.style "min-width: 400px"
        , HP.style "padding: 15px"
        ]
        [ HH.div []
            [ HH.a
                [ HP.href stringUrl
                , HP.target "_blank"
                ]
                [ HH.h3 [ Typography.subtitle1 ] [ HH.text title ]
                ]
            ]
        , HH.iframe
            [ HP.style "width: 100%"
            , HP.style "height: 200px"
            , HP.src stringUrl
            ]
            []
        ]
